pipeline {
    agent any
    triggers {
        pollSCM('*/5 * * * *')
    } 
    
    Stages {
        Stage('Checkout') {
            Steps {
                echo "Récupération du code source"
                checkout scm
            }
        }
        
        Stage('Build') {
            Steps {
                echo "Build du projet"
                
            }
        }
        
        Stage('Deploy') {
            Steps {
                echo "Déploiement du projet"
                
            }
        }
            
    }
        
        
}